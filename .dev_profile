#!/usr/bin/env zsh

#Set DEVENV PATH
export DEVENV="$HOME/DevEnv"

#Determines the Operating System
script_path="$DEVENV/scripts/get_os"
operating_system=$($script_path)
if [[ $operating_system == "windows" ]]; then
    export DEVENV_PATH="$DEVENV/Windows"
elif [[ $operating_system == "linux" ]]; then
    export DEVENV_PATH="$DEVENV/Linux"
elif [[ $operating_system == "mac" ]]; then
    export DEVENV_PATH="$DEVENV/Mac"
fi

# Set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Set PATH so it includes DevEnv bin
if [ -d "$DEVENV/bin" ] ; then
    PATH="$DEVENV/bin:$PATH"
fi

# Load Scripts
if [ -d "$DEVENV/scripts" ] ; then
    PATH="$DEVENV/scripts:$PATH"
fi

# Set Aliases
if [ -f $DEVENV/.aliases ]; then
     . $DEVENV/.aliases
fi

# Load functions
if [ -f $DEVENV/.functions ]; then
     . $DEVENV/.functions
fi

