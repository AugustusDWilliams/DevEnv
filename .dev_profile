#!/usr/bin/env zsh


#Set DEVENV PATH
export DEVENV="$HOME/DevEnv"


#Determines the Operating System
script_path="$DEVENV/get_os"
operating_system=$($script_path)
if [[ $operating_system == "windows" ]]; then
    export DEVENV_PATH="$DEVENV/Windows"
elif [[ $operating_system == "linux" ]]; then
    export DEVENV_PATH="$DEVENV/Linux"
    . $DEVENV_PATH/.scripts
elif [[ $operating_system == "mac" ]]; then
    export DEVENV_PATH="$DEVENV/Mac"
    . $DEVENV_PATH/.scripts
fi


# Set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi


# Load Scripts and Adds them to the Systems PATH
if [ -d "$DEVENV_PATH/scripts" ] ; then
    PATH="$DEVENV_PATH/scripts:$PATH"
fi


# Set Aliases
if [ -f $DEVENV_PATH/.aliases ]; then
     . $DEVENV_PATH/.aliases
fi


# Load functions
if [ -f $DEVENV_PATH/.functions ]; then
     . $DEVENV_PATH/.functions
fi

