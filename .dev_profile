#!/usr/bin/env zsh

#Set DEVPATH PATH
#DEVPATH=$PWD
DEVPATH="$HOME/DevEnv"
DEVPATH_MAC="$DEVPATH/Mac"

# Set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

# Set PATH so it includes DevEnv bin
if [ -d "$DEVPATH/bin" ] ; then
    PATH="$DEVPATH/bin:$PATH"
fi

# Load Scripts
if [ -d "$DEVPATH/scripts" ] ; then
    PATH="$DEVPATH/scripts:$PATH"
fi

# Set Aliases
if [ -f $DEVPATH/.aliases ]; then
     . $DEVPATH/.aliases
fi

# Load functions
if [ -f $DEVPATH/.functions ]; then
     . $DEVPATH/.functions
fi

